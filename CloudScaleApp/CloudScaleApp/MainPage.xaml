<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CloudScaleApp"
             x:Class="CloudScaleApp.MainPage"
             Style="{StaticResource PageStyle}">
    <StackLayout>
        <Label Text="{Binding Source={x:Static local:Settings.Default}, Path=ServerHost}" FontAttributes="Bold" IsEnabled="{Binding Path=IsHostConnected}" />
        <CarouselView x:Name="RemoteScalesView">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <local:ScaleView />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <Button Text="Settings" Clicked="OpenSettings" />
    </StackLayout>
</ContentPage>
