<?xml version="1.0" encoding="utf-8" ?>
<local:NetClientPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CloudScaleApp"
             x:Class="CloudScaleApp.MainPage"
             x:Name="Page" Style="{StaticResource PageStyle}">
    <StackLayout>
        <Label Text="{Binding Source={x:Static local:Settings.Default}, Path=ServerHost}" FontAttributes="Bold" IsEnabled="{Binding Source={x:Reference Page}, Path=IsHostConnected}" />
        <CarouselView x:Name="RemoteScalesView" IndicatorView="RemoteScalesIndicatorView">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <local:ScaleView />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <IndicatorView x:Name="RemoteScalesIndicatorView" IndicatorColor="LightGray" SelectedIndicatorColor="DarkGray" />
        <Button Text="Settings" Clicked="OpenSettings" />
    </StackLayout>
</local:NetClientPage>
