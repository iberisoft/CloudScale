<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CloudScale.SettingsPage"
             Title="Settings" Style="{StaticResource PageStyle}">
    <StackLayout>
        <Entry Placeholder="Server Host" Text="{Binding Path=ServerHost}" />
        <Entry Placeholder="Server Port" Text="{Binding Path=ServerPort}" MaxLength="5" Keyboard="Numeric" />
    </StackLayout>
</ContentPage>
